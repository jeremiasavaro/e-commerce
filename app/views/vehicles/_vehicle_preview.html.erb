<div class="bg-white rounded-xl shadow-md card-hover animate-on-scroll border">
  <div class="relative overflow-hidden rounded-t-xl">
    <%= image_tag vehicle.image, alt: vehicle.name, class: "w-full h-48 object-cover hover:scale-110 transition-transform duration-500" %>
  </div>

  <div class="p-6">
    <h3 class="text-xl font-bold mb-2 hover:text-blue-600 transition-colors">
      <%= vehicle.name %>
    </h3>

    <p class="text-2xl font-bold text-blue-600 mb-4">
      $<%= number_with_precision(vehicle.price, precision: 0, delimiter: ',') %>
    </p>

    <div class="space-y-2 text-sm text-gray-600 mb-6">
      <div class="flex justify-between">
        <span>Año:</span>
        <span class="font-medium"><%= vehicle.year %></span>
      </div>
      <div class="flex justify-between">
        <span>Color:</span>
        <span class="font-medium"><%= vehicle.color %></span>
      </div>
      <div class="flex justify-between">
        <span>Transmisión:</span>
        <span class="font-medium"><%= vehicle.transmition %></span>
      </div>
    </div>

    <%= button_to "Ver Detalles", vehicle_path(vehicle), method: :get, class: "w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-lg transition-all duration-300 btn-hover" %>
  </div>
</div>
